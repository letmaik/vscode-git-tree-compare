{
	"name": "git-tree-compare",
	"displayName": "Git Tree Compare",
	"description": "Compare your worktree against a base branch or tag, displayed as tree",
	"version": "0.1.0",
	"author": {
		"name": "Maik Riechert",
		"url": "https://github.com/letmaik"
	},
	"publisher": "letmaik",
	"license": "SEE LICENSE FILE",
	"icon": "resources/logo.png",
	"categories": [
		"Other"
	],
	"keywords": [
		"git", "diff", "tree", "compare", "branch"
	],
    "bugs": {
        "url": "https://github.com/letmaik/vscode-git-tree-compare/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/letmaik/vscode-git-tree-compare.git"
    },
    "homepage": "https://github.com/letmaik/vscode-git-tree-compare",
	"engines": {
		"vscode": "^1.13.0"
	},
	"activationEvents": [
		"onView:gitTreeCompare"
	],
	"main": "./out/src/extension",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "gitTreeCompare",
					"name": "Git Tree Compare",
					"when": "scmProvider == git && config.git.enabled && gitState != norepo"
				}
			]
		},
		"commands": [
			{
				"command": "gitTreeCompare.diffWithBase",
				"title": "Open Changes",
				"category": "Git Tree Compare"
			},
			{
				"command": "gitTreeCompare.openFile",
				"title": "Open File",
				"category": "Git Tree Compare"
			},
			{
				"command": "gitTreeCompare.changeBase",
				"title": "Change Base...",
				"category": "Git Tree Compare"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "gitTreeCompare.changeBase",
					"when": "view == gitTreeCompare"
				}
			],
			"view/item/context": [
				{
					"command": "gitTreeCompare.diffWithBase",
					"when": "view == gitTreeCompare && viewItem == file"
				},
				{
					"command": "gitTreeCompare.openFile",
					"when": "view == gitTreeCompare && viewItem == file"
				},
				{
					"command": "gitTreeCompare.changeBase",
					"when": "view == gitTreeCompare && viewItem == ref"
				}
			]
		},
		"configuration": {
			"title": "Git Tree Compare",
			"properties": {
				"gitTreeCompare.fileSelect": {
					"type": "string",
					"enum": [
						"file",
						"changes"
					],
					"description": "When selecting a file in the tree, whether to open it or show its changes.",
					"default": "file"
				},
				"gitTreeCompare.root": {
					"type": "string",
					"enum": [
						"workspace",
						"repository"
					],
					"description": "The root of the tree when the workspace folder is not the same as the repository root.",
					"default": "workspace"
				},
				"gitTreeCompare.includeFilesOutsideWorkspaceRoot": {
					"type": "boolean",
					"description": "If gitTreeCompare.root is \"workspace\", whether to display files which are within the repository but outside the workspace in a special \"/\" folder.",
					"default": true
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"typescript": "^2.3.4",
		"vscode": "^1.1.0",
		"@types/node": "*"
	},
	"dependencies": {
		"iconv-lite": "^0.4.15",
		"vscode-nls": "^2.0.1"
	}
}